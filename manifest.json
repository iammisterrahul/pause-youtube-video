{
    "manifest_version": 3,
    "name": "Pause YouTube on Tab Switch",
    "version": "1.0",
    "permissions": [
      "tabs",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  